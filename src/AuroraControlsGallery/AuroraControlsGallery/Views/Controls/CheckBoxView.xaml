<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:aurora="clr-namespace:Aurora.Controls;assembly=Aurora"
             x:Class="AuroraControlsGallery.Views.Controls.CheckBoxView"
             Title="CheckBox">
    <ContentPage.Content>
        <Grid>
            <aurora:CheckBox
                BorderColor="Blue"
                CheckType="Circular"
                Shape="Circular"
                ToggledBackgroundColor="Red"
                IsToggled="True"
                VerticalOptions="Center"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>